---
import Layout from '../layouts/Layout.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import Hero from '../components/Hero.astro'
import { Calendar, FileText, DollarSign, Award, Clock, CheckCircle, Users, Phone, Mail } from 'lucide-astro'
---

<Layout 
  title="Academic Year & Admissions - International School" 
  description="Learn about our admissions process, application requirements, fee structure, and academic calendar. Start your child's journey with us today."
>
  <Header />
  
  <!-- Hero Section -->
  <Hero 
    title="Academic Year & Admissions"
    subtitle="Join Our Community"
    description="Begin your child's educational journey at International School. Discover our admissions process, academic calendar, and everything you need to know about joining our international learning community."
    ctaText="Apply Now"
    ctaLink="#application-form"
    backgroundImage="/images/hero-school.png"
  />

  <!-- Admissions Process -->
  <section class="py-16 bg-white">
    <div class="mx-auto max-w-screen-2xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Admissions Process</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Our straightforward admissions process is designed to help you understand if our school is the right fit for your child.
        </p>
      </div>

      <div class="grid md:grid-cols-4 gap-8">
        
        <!-- Step 1 -->
        <div class="text-center">
          <div class="bg-primary-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-primary-600">1</span>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Initial Inquiry</h3>
          <p class="text-gray-600">
            Submit your inquiry form or contact our admissions team to schedule a school tour and information session.
          </p>
        </div>

        <!-- Step 2 -->
        <div class="text-center">
          <div class="bg-primary-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-primary-600">2</span>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Application Submission</h3>
          <p class="text-gray-600">
            Complete the online application form and submit required documents including academic transcripts and references.
          </p>
        </div>

        <!-- Step 3 -->
        <div class="text-center">
          <div class="bg-primary-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-primary-600">3</span>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Assessment & Interview</h3>
          <p class="text-gray-600">
            Age-appropriate assessment and family interview to understand your child's needs and learning profile.
          </p>
        </div>

        <!-- Step 4 -->
        <div class="text-center">
          <div class="bg-primary-100 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl font-bold text-primary-600">4</span>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-3">Enrollment</h3>
          <p class="text-gray-600">
            Upon acceptance, complete enrollment paperwork and prepare for your child's smooth transition to our school.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Application Requirements -->
  <section class="py-16 bg-gray-50">
    <div class="mx-auto max-w-screen-2xl px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12">
        
        <!-- Requirements -->
        <div>
          <h2 class="text-3xl font-bold text-gray-900 mb-6">Application Requirements</h2>
          <p class="text-lg text-gray-600 mb-8">
            Please ensure you have the following documents ready for your application:
          </p>

          <div class="space-y-6">
            
            <!-- Academic Records -->
            <div class="flex items-start">
              <FileText class="h-6 w-6 text-primary-500 mr-4 mt-1 flex-shrink-0" />
              <div>
                <h3 class="font-semibold text-gray-900 mb-2">Academic Records</h3>
                <p class="text-gray-600 text-sm">
                  Official transcripts from current and previous schools (last 2-3 years). English translations required for non-English documents.
                </p>
              </div>
            </div>

            <!-- Language Assessment -->
            <div class="flex items-start">
              <Users class="h-6 w-6 text-primary-500 mr-4 mt-1 flex-shrink-0" />
              <div>
                <h3 class="font-semibold text-gray-900 mb-2">Language Proficiency</h3>
                <p class="text-gray-600 text-sm">
                  English language assessment for non-native speakers. Additional language support available if needed.
                </p>
              </div>
            </div>

            <!-- References -->
            <div class="flex items-start">
              <Award class="h-6 w-6 text-primary-500 mr-4 mt-1 flex-shrink-0" />
              <div>
                <h3 class="font-semibold text-gray-900 mb-2">References</h3>
                <p class="text-gray-600 text-sm">
                  Two references: one from current school principal/teacher and one personal character reference.
                </p>
              </div>
            </div>

            <!-- Medical Records -->
            <div class="flex items-start">
              <CheckCircle class="h-6 w-6 text-primary-500 mr-4 mt-1 flex-shrink-0" />
              <div>
                <h3 class="font-semibold text-gray-900 mb-2">Medical Information</h3>
                <p class="text-gray-600 text-sm">
                  Completed health form and immunization records. Any special needs or accommodations information.
                </p>
              </div>
            </div>

            <!-- Documents -->
            <div class="flex items-start">
              <FileText class="h-6 w-6 text-primary-500 mr-4 mt-1 flex-shrink-0" />
              <div>
                <h3 class="font-semibold text-gray-900 mb-2">Identity Documents</h3>
                <p class="text-gray-600 text-sm">
                  Copy of student's passport and visa documents (if applicable). Parent/guardian identification.
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Important Dates -->
        <div>
          <div class="bg-white rounded-xl shadow-md p-8">
            <h3 class="text-2xl font-bold text-gray-900 mb-6">Important Dates</h3>
            
            <div class="space-y-6">
              
              <!-- Application Deadlines -->
              <div>
                <h4 class="font-semibold text-gray-900 mb-3 flex items-center">
                  <Calendar class="h-5 w-5 text-primary-500 mr-2" />
                  Application Deadlines
                </h4>
                <div class="space-y-2 text-sm text-gray-600 ml-7">
                  <div class="flex justify-between">
                    <span>Early Admission:</span>
                    <span class="font-medium">January 15, 2025</span>
                  </div>
                  <div class="flex justify-between">
                    <span>Regular Admission:</span>
                    <span class="font-medium">March 31, 2025</span>
                  </div>
                  <div class="flex justify-between">
                    <span>Late Applications:</span>
                    <span class="font-medium">May 31, 2025</span>
                  </div>
                </div>
              </div>

              <!-- Academic Calendar -->
              <div>
                <h4 class="font-semibold text-gray-900 mb-3 flex items-center">
                  <Clock class="h-5 w-5 text-primary-500 mr-2" />
                  Academic Year 2025-26
                </h4>
                <div class="space-y-2 text-sm text-gray-600 ml-7">
                  <div class="flex justify-between">
                    <span>Orientation Week:</span>
                    <span class="font-medium">August 18-22, 2025</span>
                  </div>
                  <div class="flex justify-between">
                    <span>First Day of School:</span>
                    <span class="font-medium">August 25, 2025</span>
                  </div>
                  <div class="flex justify-between">
                    <span>Winter Break:</span>
                    <span class="font-medium">Dec 20 - Jan 6</span>
                  </div>
                  <div class="flex justify-between">
                    <span>Last Day of School:</span>
                    <span class="font-medium">June 12, 2026</span>
                  </div>
                </div>
              </div>

              <!-- Testing Dates -->
              <div>
                <h4 class="font-semibold text-gray-900 mb-3 flex items-center">
                  <Award class="h-5 w-5 text-primary-500 mr-2" />
                  Assessment Dates
                </h4>
                <div class="space-y-2 text-sm text-gray-600 ml-7">
                  <div class="flex justify-between">
                    <span>Primary Assessment:</span>
                    <span class="font-medium">By appointment</span>
                  </div>
                  <div class="flex justify-between">
                    <span>Secondary Assessment:</span>
                    <span class="font-medium">Saturdays 9:00 AM</span>
                  </div>
                  <div class="flex justify-between">
                    <span>English Language Test:</span>
                    <span class="font-medium">As needed</span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Contact CTA -->
            <div class="mt-8 pt-6 border-t border-gray-200">
              <p class="text-sm text-gray-600 mb-4">
                Have questions about the application process?
              </p>
              <div class="space-y-2">
                <div class="flex items-center text-sm">
                  <Phone class="h-4 w-4 text-primary-500 mr-2" />
                  <span>+1-555-0123</span>
                </div>
                <div class="flex items-center text-sm">
                  <Mail class="h-4 w-4 text-primary-500 mr-2" />
                  <span>admissions@school.edu</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Fee Structure -->
  <section class="py-16 bg-white">
    <div class="mx-auto max-w-screen-2xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Tuition & Fees</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Transparent fee structure with no hidden costs. Financial aid and payment plans available.
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-12">
        
        <!-- Fee Table -->
        <div>
          <div class="bg-white border border-gray-200 rounded-xl overflow-hidden">
            <div class="bg-primary-500 text-white p-6">
              <h3 class="text-xl font-bold flex items-center">
                <DollarSign class="h-6 w-6 mr-2" />
                Annual Tuition Fees (2025-26)
              </h3>
            </div>
            
            <div class="divide-y divide-gray-200">
              
              <div class="p-6">
                <div class="flex justify-between items-center">
                  <div>
                    <h4 class="font-semibold text-gray-900">Primary School (K-5)</h4>
                    <p class="text-sm text-gray-600">Ages 5-11</p>
                  </div>
                  <div class="text-right">
                    <div class="text-2xl font-bold text-gray-900">$18,500</div>
                    <div class="text-sm text-gray-600">per year</div>
                  </div>
                </div>
              </div>

              <div class="p-6">
                <div class="flex justify-between items-center">
                  <div>
                    <h4 class="font-semibold text-gray-900">Middle School (6-8)</h4>
                    <p class="text-sm text-gray-600">Ages 11-14</p>
                  </div>
                  <div class="text-right">
                    <div class="text-2xl font-bold text-gray-900">$21,200</div>
                    <div class="text-sm text-gray-600">per year</div>
                  </div>
                </div>
              </div>

              <div class="p-6">
                <div class="flex justify-between items-center">
                  <div>
                    <h4 class="font-semibold text-gray-900">Senior School (9-11)</h4>
                    <p class="text-sm text-gray-600">Ages 14-17</p>
                  </div>
                  <div class="text-right">
                    <div class="text-2xl font-bold text-gray-900">$24,800</div>
                    <div class="text-sm text-gray-600">per year</div>
                  </div>
                </div>
              </div>

              <div class="p-6">
                <div class="flex justify-between items-center">
                  <div>
                    <h4 class="font-semibold text-gray-900">Sixth Form (12-13)</h4>
                    <p class="text-sm text-gray-600">Ages 17-19</p>
                  </div>
                  <div class="text-right">
                    <div class="text-2xl font-bold text-gray-900">$27,500</div>
                    <div class="text-sm text-gray-600">per year</div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Additional Fees -->
          <div class="mt-8 bg-gray-50 rounded-xl p-6">
            <h4 class="font-semibold text-gray-900 mb-4">Additional Fees</h4>
            <div class="space-y-3 text-sm">
              <div class="flex justify-between">
                <span>Application Fee (one-time):</span>
                <span class="font-medium">$250</span>
              </div>
              <div class="flex justify-between">
                <span>Registration Fee (annual):</span>
                <span class="font-medium">$500</span>
              </div>
              <div class="flex justify-between">
                <span>Technology Fee (annual):</span>
                <span class="font-medium">$800</span>
              </div>
              <div class="flex justify-between">
                <span>Activity Fee (annual):</span>
                <span class="font-medium">$600</span>
              </div>
              <div class="flex justify-between">
                <span>Lunch Program (optional):</span>
                <span class="font-medium">$1,200</span>
              </div>
              <div class="flex justify-between">
                <span>Transportation (optional):</span>
                <span class="font-medium">$1,800</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Payment & Financial Aid -->
        <div class="space-y-8">
          
          <!-- Payment Plans -->
          <div class="bg-blue-50 rounded-xl p-8">
            <h3 class="text-xl font-bold text-gray-900 mb-4">Payment Options</h3>
            <div class="space-y-4">
              
              <div class="flex items-start">
                <CheckCircle class="h-5 w-5 text-blue-600 mr-3 mt-0.5 flex-shrink-0" />
                <div>
                  <h4 class="font-medium text-gray-900">Annual Payment</h4>
                  <p class="text-sm text-gray-600">Full year payment by August 1st (3% discount)</p>
                </div>
              </div>

              <div class="flex items-start">
                <CheckCircle class="h-5 w-5 text-blue-600 mr-3 mt-0.5 flex-shrink-0" />
                <div>
                  <h4 class="font-medium text-gray-900">Semester Plan</h4>
                  <p class="text-sm text-gray-600">Two payments: 60% by August 1st, 40% by January 1st</p>
                </div>
              </div>

              <div class="flex items-start">
                <CheckCircle class="h-5 w-5 text-blue-600 mr-3 mt-0.5 flex-shrink-0" />
                <div>
                  <h4 class="font-medium text-gray-900">Monthly Plan</h4>
                  <p class="text-sm text-gray-600">10 monthly payments from August to May</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Financial Aid -->
          <div class="bg-green-50 rounded-xl p-8">
            <h3 class="text-xl font-bold text-gray-900 mb-4">Financial Aid</h3>
            <p class="text-gray-600 mb-4">
              We believe that financial circumstances should not prevent a child from receiving an excellent education.
            </p>
            
            <div class="space-y-3">
              <div class="flex items-center">
                <Award class="h-5 w-5 text-green-600 mr-3" />
                <span class="text-sm">Need-based financial aid available</span>
              </div>
              <div class="flex items-center">
                <Award class="h-5 w-5 text-green-600 mr-3" />
                <span class="text-sm">Merit scholarships for exceptional students</span>
              </div>
              <div class="flex items-center">
                <Award class="h-5 w-5 text-green-600 mr-3" />
                <span class="text-sm">Sibling discounts (10% for 2nd child, 15% for 3rd+)</span>
              </div>
              <div class="flex items-center">
                <Award class="h-5 w-5 text-green-600 mr-3" />
                <span class="text-sm">Staff and alumni family discounts</span>
              </div>
            </div>

            <div class="mt-6 pt-4 border-t border-green-200">
              <p class="text-sm text-gray-600">
                Financial aid applications due by February 15th. 
                <a href="#" class="text-green-600 hover:text-green-700 font-medium">Download application form</a>
              </p>
            </div>
          </div>

          <!-- Download Prospectus -->
          <div class="bg-white border-2 border-dashed border-gray-300 rounded-xl p-8 text-center">
            <FileText class="h-12 w-12 text-gray-400 mx-auto mb-4" />
            <h3 class="text-lg font-semibold text-gray-900 mb-2">School Prospectus</h3>
            <p class="text-gray-600 mb-4">
              Download our comprehensive school prospectus with detailed information about programs, facilities, and policies.
            </p>
            <a 
              href="/medias/School_Prospectus-2025.pdf" 
              class="inline-flex items-center px-6 py-3 bg-primary-500 text-white font-medium rounded-lg hover:bg-primary-600 transition-colors duration-200"
              target="_blank" 
            >
              <FileText class="h-5 w-5 mr-2" />
              Download Prospectus (PDF)
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Button to Enrollment Form -->
  <div class="text-center pt-6">
    <a id="application-form"
      href="https://forms.office.com/e/HLhbL5pVdK" 
      target="_blank" 
      rel="noopener noreferrer"
      class="inline-flex items-center px-8 py-4 bg-primary-500 text-white font-semibold rounded-lg hover:bg-primary-600 transition-colors duration-200 transform hover:scale-105"
    >
              Submit a Application
    </a>
   </div>
   </br> 
   
  <!-- Application Form -->
  <section id="application-form" class="py-16 bg-gray-50" style="display: none;">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Start Your Application</h2>
        <p class="text-xl text-gray-600">
          Ready to join our school community? Begin the application process today.
        </p>
      </div>

      <div class="bg-white rounded-xl shadow-md p-8">
        <form class="space-y-6">
          
          <!-- Student Information -->
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Student Information</h3>
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="student-first-name" class="block text-sm font-medium text-gray-700 mb-2">
                  Student First Name *
                </label>
                <input 
                  type="text" 
                  id="student-first-name" 
                  name="student-first-name" 
                  required
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                />
              </div>
              
              <div>
                <label for="student-last-name" class="block text-sm font-medium text-gray-700 mb-2">
                  Student Last Name *
                </label>
                <input 
                  type="text" 
                  id="student-last-name" 
                  name="student-last-name" 
                  required
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                />
              </div>

              <div>
                <label for="date-of-birth" class="block text-sm font-medium text-gray-700 mb-2">
                  Date of Birth *
                </label>
                <input 
                  type="date" 
                  id="date-of-birth" 
                  name="date-of-birth" 
                  required
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                />
              </div>

              <div>
                <label for="grade-applying" class="block text-sm font-medium text-gray-700 mb-2">
                  Grade Applying For *
                </label>
                <select 
                  id="grade-applying" 
                  name="grade-applying" 
                  required
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                >
                  <option value="">Select Grade</option>
                  <option value="kindergarten">Kindergarten</option>
                  <option value="grade-1">Grade 1</option>
                  <option value="grade-2">Grade 2</option>
                  <option value="grade-3">Grade 3</option>
                  <option value="grade-4">Grade 4</option>
                  <option value="grade-5">Grade 5</option>
                  <option value="grade-6">Grade 6</option>
                  <option value="grade-7">Grade 7</option>
                  <option value="grade-8">Grade 8</option>
                  <option value="grade-9">Grade 9</option>
                  <option value="grade-10">Grade 10</option>
                  <option value="grade-11">Grade 11</option>
                  <option value="grade-12">Grade 12</option>
                  <option value="grade-13">Grade 13</option>
                </select>
              </div>
            </div>
          </div>

          <!-- Parent Information -->
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Parent/Guardian Information</h3>
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label for="parent-name" class="block text-sm font-medium text-gray-700 mb-2">
                  Parent/Guardian Name *
                </label>
                <input 
                  type="text" 
                  id="parent-name" 
                  name="parent-name" 
                  required
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                />
              </div>

              <div>
                <label for="relationship" class="block text-sm font-medium text-gray-700 mb-2">
                  Relationship to Student *
                </label>
                <select 
                  id="relationship" 
                  name="relationship" 
                  required
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                >
                  <option value="">Select Relationship</option>
                  <option value="mother">Mother</option>
                  <option value="father">Father</option>
                  <option value="guardian">Legal Guardian</option>
                  <option value="other">Other</option>
                </select>
              </div>

              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                  Email Address *
                </label>
                <input 
                  type="email" 
                  id="email" 
                  name="email" 
                  required
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                />
              </div>

              <div>
                <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                  Phone Number *
                </label>
                <input 
                  type="tel" 
                  id="phone" 
                  name="phone" 
                  required
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                />
              </div>
            </div>
          </div>

          <!-- Additional Information -->
          <div>
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Additional Information</h3>
            <div class="space-y-6">
              
              <div>
                <label for="current-school" class="block text-sm font-medium text-gray-700 mb-2">
                  Current School
                </label>
                <input 
                  type="text" 
                  id="current-school" 
                  name="current-school"
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                />
              </div>

              <div>
                <label for="start-date" class="block text-sm font-medium text-gray-700 mb-2">
                  Preferred Start Date *
                </label>
                <select 
                  id="start-date" 
                  name="start-date" 
                  required
                  class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
                >
                  <option value="">Select Start Date</option>
                  <option value="august-2025">August 2025 (New Academic Year)</option>
                  <option value="january-2026">January 2026 (Mid-Year)</option>
                  <option value="asap">As Soon As Possible</option>
                </select>
              </div>

              <div>
