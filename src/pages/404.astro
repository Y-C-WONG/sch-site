---
import Layout from '../layouts/Layout.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import { Home, Search, ArrowLeft, BookOpen, Calendar, Phone, Mail } from 'lucide-astro'
---

<Layout 
  title="Page Not Found - International School" 
  description="The page you're looking for could not be found. Return to our homepage or explore our site navigation."
  noindex={true}
>
  <Header />
  
  <!-- 404 Hero Section -->
  <section class="py-24 bg-gradient-to-br from-primary-500 to-primary-600 text-white">
    <div class="mx-auto max-w-screen-2xl px-4 sm:px-6 lg:px-8 text-center">
      <div class="mb-8">
        <div class="text-8xl font-bold text-primary-200 mb-4">404</div>
        <h1 class="text-4xl font-bold mb-4">Page Not Found</h1>
        <p class="text-xl text-primary-100 max-w-2xl mx-auto">
          Sorry, we couldn't find the page you're looking for. It might have been moved, deleted, or you may have entered an incorrect URL.
        </p>
      </div>
      
      <!-- Quick Actions -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/"
          class="inline-flex items-center px-6 py-3 bg-white text-primary-600 font-semibold rounded-lg hover:bg-primary-50 transition-all duration-300 transform hover:scale-105"
        >
          <Home class="h-5 w-5 mr-2" />
          Go to Homepage
        </a>
        
        <button 
          onclick="history.back()"
          class="inline-flex items-center px-6 py-3 border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-primary-600 transition-all duration-300"
        >
          <ArrowLeft class="h-5 w-5 mr-2" />
          Go Back
        </button>
      </div>
    </div>
  </section>

  <!-- Search Section -->
  <section class="py-16 bg-gray-50" style="display: none">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <Search class="h-12 w-12 text-gray-400 mx-auto mb-4" />
        <h2 class="text-2xl font-bold text-gray-900 mb-4">Looking for something specific?</h2>
        <p class="text-gray-600 mb-8">
          Try searching for what you need or browse our popular sections below.
        </p>
        
        <!-- Search Box -->
        <div class="max-w-md mx-auto mb-8">
          <div class="relative">
            <Search class="absolute left-3 top-1/2 transform -translate-y-1/2 h-5 w-5 text-gray-400" />
            <input 
              type="text" 
              id="site-search"
              placeholder="Search our website..."
              class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent"
            />
          </div>
          <button 
            onclick="performSearch()"
            class="w-full mt-3 px-6 py-3 bg-primary-500 text-white font-medium rounded-lg hover:bg-primary-600 transition-colors duration-200"
          >
            Search Website
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Popular Sections -->
  <section class="py-16 bg-white"  style="display: none">
    <div class="mx-auto max-w-screen-2xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Popular Sections</h2>
        <p class="text-xl text-gray-600">
          Explore the most visited areas of our website
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        
        <!-- Academic Programs -->
        <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-xl p-8 text-center hover:shadow-lg transition-shadow duration-300">
          <BookOpen class="h-12 w-12 text-blue-600 mx-auto mb-4" />
          <h3 class="text-xl font-bold text-gray-900 mb-3">Academic Programs</h3>
          <p class="text-gray-600 mb-6">
            Discover our comprehensive educational offerings from Primary through Sixth Form.
          </p>
          <a 
            href="/academic-programs"
            class="inline-flex items-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors duration-200"
          >
            Explore Programs
          </a>
        </div>

        <!-- News & Events -->
        <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-xl p-8 text-center hover:shadow-lg transition-shadow duration-300">
          <Calendar class="h-12 w-12 text-green-600 mx-auto mb-4" />
          <h3 class="text-xl font-bold text-gray-900 mb-3">News & Events</h3>
          <p class="text-gray-600 mb-6">
            Stay updated with the latest school news, announcements, and upcoming events.
          </p>
          <a 
            href="/news"
            class="inline-flex items-center px-4 py-2 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 transition-colors duration-200"
          >
            View News
          </a>
        </div>

        <!-- Admissions -->
        <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-xl p-8 text-center hover:shadow-lg transition-shadow duration-300">
          <Home class="h-12 w-12 text-purple-600 mx-auto mb-4" />
          <h3 class="text-xl font-bold text-gray-900 mb-3">Admissions</h3>
          <p class="text-gray-600 mb-6">
            Learn about our application process and how to join our school community.
          </p>
          <a 
            href="/academic-year"
            class="inline-flex items-center px-4 py-2 bg-purple-600 text-white font-medium rounded-lg hover:bg-purple-700 transition-colors duration-200"
          >
            Apply Now
          </a>
        </div>

        <!-- About Us -->
        <div class="bg-gradient-to-br from-orange-50 to-orange-100 rounded-xl p-8 text-center hover:shadow-lg transition-shadow duration-300">
          <Home class="h-12 w-12 text-orange-600 mx-auto mb-4" />
          <h3 class="text-xl font-bold text-gray-900 mb-3">About Us</h3>
          <p class="text-gray-600 mb-6">
            Discover our mission, values, and commitment to excellence in education.
          </p>
          <a 
            href="/about"
            class="inline-flex items-center px-4 py-2 bg-orange-600 text-white font-medium rounded-lg hover:bg-orange-700 transition-colors duration-200"
          >
            Learn More
          </a>
        </div>

        <!-- Campus & Facilities -->
        <div class="bg-gradient-to-br from-teal-50 to-teal-100 rounded-xl p-8 text-center hover:shadow-lg transition-shadow duration-300">
          <Home class="h-12 w-12 text-teal-600 mx-auto mb-4" />
          <h3 class="text-xl font-bold text-gray-900 mb-3">Campus & Facilities</h3>
          <p class="text-gray-600 mb-6">
            Explore our modern campus and state-of-the-art learning facilities.
          </p>
          <a 
            href="/campus-facilities"
            class="inline-flex items-center px-4 py-2 bg-teal-600 text-white font-medium rounded-lg hover:bg-teal-700 transition-colors duration-200"
          >
            Tour Campus
          </a>
        </div>

        <!-- Contact -->
        <div class="bg-gradient-to-br from-red-50 to-red-100 rounded-xl p-8 text-center hover:shadow-lg transition-shadow duration-300">
          <Phone class="h-12 w-12 text-red-600 mx-auto mb-4" />
          <h3 class="text-xl font-bold text-gray-900 mb-3">Contact Us</h3>
          <p class="text-gray-600 mb-6">
            Get in touch with our team for questions, support, or more information.
          </p>
          <a 
            href="/contact"
            class="inline-flex items-center px-4 py-2 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 transition-colors duration-200"
          >
            Contact Us
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Help Section -->
  <section class="py-16 bg-gray-50">
    <div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl font-bold text-gray-900 mb-8">Still Need Help?</h2>
      
      <div class="grid md:grid-cols-2 gap-8">
        
        <!-- Contact Information -->
        <div class="bg-white rounded-xl shadow-md p-8">
          <Phone class="h-8 w-8 text-primary-500 mx-auto mb-4" />
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Call Us</h3>
          <p class="text-gray-600 mb-4">
            Speak directly with our team for immediate assistance.
          </p>
          <div class="space-y-2">
            <div class="flex items-center justify-center">
              <Phone class="h-4 w-4 text-primary-500 mr-2" />
              <span class="font-medium">+1-555-0123</span>
            </div>
            <div class="text-sm text-gray-500">Monday - Friday, 8:00 AM - 5:00 PM</div>
          </div>
        </div>

        <!-- Email Support -->
        <div class="bg-white rounded-xl shadow-md p-8">
          <Mail class="h-8 w-8 text-primary-500 mx-auto mb-4" />
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Email Us</h3>
          <p class="text-gray-600 mb-4">
            Send us a message and we'll respond within 24 hours.
          </p>
          <div class="space-y-2">
            <div class="flex items-center justify-center">
              <Mail class="h-4 w-4 text-primary-500 mr-2" />
              <span class="font-medium">info@school.edu</span>
            </div>
            <div class="text-sm text-gray-500">We typically respond within 24 hours</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Sitemap Links -->
  <section class="py-12 bg-white border-t border-gray-200"  style="display: none">
    <div class="mx-auto max-w-screen-2xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-8">
        <h3 class="text-lg font-semibold text-gray-900">Quick Site Navigation</h3>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4 text-sm">
        <div>
          <h4 class="font-medium text-gray-900 mb-2">Main Pages</h4>
          <ul class="space-y-1 text-gray-600">
            <li><a href="/" class="hover:text-primary-600">Home</a></li>
            <li><a href="/about" class="hover:text-primary-600">About Us</a></li>
            <li><a href="/contact" class="hover:text-primary-600">Contact</a></li>
          </ul>
        </div>
        
        <div>
          <h4 class="font-medium text-gray-900 mb-2">Academics</h4>
          <ul class="space-y-1 text-gray-600">
            <li><a href="/academic-programs" class="hover:text-primary-600">Programs</a></li>
            <li><a href="/academic-year" class="hover:text-primary-600">Academic Year</a></li>
            <li><a href="/campus-facilities" class="hover:text-primary-600">Facilities</a></li>
          </ul>
        </div>
        
        <div>
          <h4 class="font-medium text-gray-900 mb-2">News & Events</h4>
          <ul class="space-y-1 text-gray-600">
            <li><a href="/news" class="hover:text-primary-600">Latest News</a></li>
            <li><a href="/events" class="hover:text-primary-600">Events</a></li>
            <li><a href="/news/archive" class="hover:text-primary-600">News Archive</a></li>
          </ul>
        </div>
        
        <div>
          <h4 class="font-medium text-gray-900 mb-2">Programs</h4>
          <ul class="space-y-1 text-gray-600">
            <li><a href="/academic-programs#primary" class="hover:text-primary-600">Primary School</a></li>
            <li><a href="/academic-programs#middle" class="hover:text-primary-600">Middle School</a></li>
            <li><a href="/academic-programs#senior" class="hover:text-primary-600">Senior School</a></li>
            <li><a href="/academic-programs#sixth-form" class="hover:text-primary-600">Sixth Form</a></li>
          </ul>
        </div>
        
        <div>
          <h4 class="font-medium text-gray-900 mb-2">Information</h4>
          <ul class="space-y-1 text-gray-600">
            <li><a href="/privacy-policy" class="hover:text-primary-600">Privacy Policy</a></li>
            <li><a href="/sitemap.xml" class="hover:text-primary-600">Sitemap</a></li>
          </ul>
        </div>
        
        <div>
          <h4 class="font-medium text-gray-900 mb-2">Connect</h4>
          <ul class="space-y-1 text-gray-600">
            <li><a href="#" class="hover:text-primary-600">Facebook</a></li>
            <li><a href="#" class="hover:text-primary-600">Instagram</a></li>
            <li><a href="#" class="hover:text-primary-600">LinkedIn</a></li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<script>
  function performSearch() {
    const searchInput = document.getElementById('site-search') as HTMLInputElement
    const searchTerm = searchInput?.value?.trim()
    
    if (searchTerm) {
      // Redirect to news page with search parameter
      // You could also implement a dedicated search page
      window.location.href = `/news?search=${encodeURIComponent(searchTerm)}`
    }
  }
  
  // Allow Enter key to trigger search
  document.getElementById('site-search')?.addEventListener('keypress', function(e) {
    if (e.key === 'Enter') {
      performSearch()
    }
  })
  
  // Track 404 errors for analytics (optional)
  if (typeof gtag !== 'undefined') {
    gtag('event', 'page_view', {
      page_title: '404 - Page Not Found',
      page_location: window.location.href,
      custom_map: { 'custom_parameter_1': 'error_404' }
    })
  }
</script>