---
import { ChevronRight, Users, Award, Globe } from 'lucide-astro'

interface Props {
  title: string
  subtitle?: string
  description?: string
  ctaText?: string
  ctaLink?: string
  backgroundImage?: string
  showStats?: boolean
}

const {
  title,
  subtitle,
  description,
  ctaText = "Learn More",
  ctaLink = "/about",
  backgroundImage = "/images/hero-bg.png",
  showStats = false
} = Astro.props
---

<section class="relative bg-primary-500 text-white overflow-hidden">
  <!-- Background Image with Overlay -->
  <div class="absolute inset-0">
    <img 
      src={backgroundImage} 
      alt="School campus" 
      class="w-full h-full object-cover"
      loading="eager"
    />
    <div class="absolute inset-0 bg-primary-500 bg-opacity-80"></div>
  </div>

  <!-- Content -->
  <div class="relative mx-auto max-w-screen-2xl px-4 py-24 sm:px-6 lg:px-8 lg:py-32">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      
      <!-- Left Column - Text Content -->
      <div class="text-center lg:text-left">
        {subtitle && (
          <p class="text-primary-100 text-lg font-medium mb-4">{subtitle}</p>
        )}
        
        <h1 class="text-4xl sm:text-5xl font-bold leading-tight mb-6">
          {title}
        </h1>
        
        {description && (
          <p class="text-xl text-primary-100 mb-8 leading-relaxed">
            {description}
          </p>
        )}
        
        <!-- CTA Button -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
          <a 
            href={ctaLink}
            class="inline-flex items-center justify-center px-8 py-4 bg-white text-primary-600 font-semibold rounded-lg hover:bg-primary-50 transition-all duration-300 transform hover:scale-105 shadow-lg"
          >
            {ctaText}
            <ChevronRight class="ml-2 h-5 w-5" />
          </a>
          
          <a 
            href="/contact"
            class="inline-flex items-center justify-center px-8 py-4 border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-primary-600 transition-all duration-300"
          >
            Contact Us
          </a>
        </div>
      </div>

      <!-- Right Column - Stats or Additional Content -->
      <div class="text-center lg:text-left">
        {showStats && (
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-8">
            <div class="bg-white bg-opacity-10 backdrop-blur-sm rounded-xl p-6">
              <Users class="h-8 w-8 text-primary-200 mb-3 mx-auto lg:mx-0" />
              <div class="text-3xl font-bold mb-1">500+</div>
              <div class="text-primary-100 text-sm">Students</div>
            </div>
            
            <div class="bg-white bg-opacity-10 backdrop-blur-sm rounded-xl p-6">
              <Award class="h-8 w-8 text-primary-200 mb-3 mx-auto lg:mx-0" />
              <div class="text-3xl font-bold mb-1">50+</div>
              <div class="text-primary-100 text-sm">Awards</div>
            </div>
            
            <div class="bg-white bg-opacity-10 backdrop-blur-sm rounded-xl p-6">
              <Globe class="h-8 w-8 text-primary-200 mb-3 mx-auto lg:mx-0" />
              <div class="text-3xl font-bold mb-1">25+</div>
              <div class="text-primary-100 text-sm">Countries</div>
            </div>
          </div>
        )}
      </div>
    </div>
  </div>

  <!-- Decorative Elements -->
  <div class="absolute bottom-0 left-0 right-0">
    <svg class="w-full h-12 text-white" viewBox="0 0 1200 120" preserveAspectRatio="none">
      <path d="M0,60 C240,30 480,0 720,0 C960,0 1200,30 1200,60 L1200,120 L0,120 Z" fill="currentColor"></path>
    </svg>
  </div>
</section>